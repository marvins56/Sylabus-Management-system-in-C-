@model IEnumerable<SMIS.Models.ClassTable>

@{
    ViewBag.Title = "dash";
    Layout = "~/Views/Shared/_smisLayout.cshtml";

}

<a href="@Url.Action("Create", "Class")" class="btn btn-icon btn-primary mb-2"><i class="fas fa-plus"></i> <span>Add Class</span></a>

<div class="row ">

    @foreach (var item in Model)
    {

        <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <div class="card">
                <div class="card-header-action">
                    <div class="dropdown">
                        <a href="#" data-toggle="dropdown" class="btn btn-light dropdown-toggle">
                            <i class="fas fa-cog"></i>
                        </a>

                        <div class="dropdown-menu">
                            <a href="@Url.Action("classSubjects", "subject_class", new { id = item.Class_id })" class=" pt-4 ml-0 dropdown-item has-icon"><i class="fas fa-eye"></i>class Subjects </a>

                            <a href="@Url.Action("studentsPerclass", "Class", new { id = item.Class_id })" class=" pt-4 ml-0 dropdown-item has-icon"><i class="fas fa-eye"></i>View Students </a>

                            @*<a href="@Url.Action("Details", "Class", new { id = item.Class_id })" class="dropdown-item has-icon"><i class="fas fa-eye"></i>View </a>*@
                            <a href="@Url.Action("Edit", "Class", new { id = item.Class_id })" class="dropdown-item has-icon"><i class="far fa-edit"></i>Edit</a>
                            <div class="dropdown-divider"></div>
                            @*<a href="@Url.Action("Delete", "Class", new { id = item.Class_id })" class="dropdown-item has-icon text-danger">
                                    <i class="far fa-trash-alt"></i>delete
                                </a>*@
                        </div>
                    </div>

                </div>
                <div class="card-statistic-4">
                    <div class="align-items-center justify-content-between">
                        <div class="row ">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 pr-0 pt-3">
                                <div class="card-content">
                                    <h5 class="font-15">Class</h5>
                                    <h2 class="mb-3 font-18">@Html.DisplayFor(modelItem => item.Class_Name)</h2>
                                    <h6 class="mb-0">
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 pl-0">
                                <div class="banner-img">
                                    <img src="~/Content/assets/img/banner/7.jpg" alt="">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

