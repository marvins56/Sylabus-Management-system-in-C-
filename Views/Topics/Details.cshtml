                            @Html.DisplayNameFor(model => model.Year.year1)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Year.year1)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.WeeksTable.Week_Name)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.WeeksTable.Week_Name)
