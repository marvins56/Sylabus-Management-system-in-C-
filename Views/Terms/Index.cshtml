@model IEnumerable<SMIS.Models.Term>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_smisLayout.cshtml";
}




<div class="card">
    <div class="card-header">

    </div>
    <div class="card-body">
        <div class="media">
            <div class="media-body">
                <p>
                    <table class="table">
                        <tr>
                            <th>
                               TERM
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.term1)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Term_Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Term_Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Term_Id })
