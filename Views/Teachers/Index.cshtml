@model IEnumerable<SMIS.Models.Teacher>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_smisLayout.cshtml";
}


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4>Teachers Details</h4>
                <div class="card-header-action">
                    <form>
                        <div class="input-group">
                           
                            <div class="input-group-btn">
                                <a href="@Url.Action("Create","Teachers")" class="btn btn-primary"> Add Teacher</a>
                               
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped" id="sortable-table">
                        <thead>

                            <tr>
                                <th>
                                   
                                </th>
                                <th>
                                    Teacher
                                </th>
                                <th>
                                    Class
                                </th>
                                <th>
                                    Subject
                                </th>
                                <th>
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="sort-handler">
                                            <i class="fas fa-th"></i>
                                        </div>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Teacher1)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ClassTable.Class_Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SubjectTable.Name)
                                    </td>
                                    <td>
                                        <div class="dropdown">
                                            <a href="#" data-toggle="dropdown" class="btn btn-light   dropdown-toggle">
                                                <i class="fas fa-cog"></i>
                                            </a>

                                            <div class="dropdown-menu">
                                                <a href="@Url.Action("Edit", "Teachers", new { id = item.Id })" class="dropdown-item has-icon"><i class="far fa-edit"></i>Edit</a>
                                                <div class="dropdown-divider"></div>
                                                <a href="@Url.Action("Delete", "Teachers", new { id = item.Id})" class="dropdown-item has-icon text-danger">
                                                    <i class="far fa-trash-alt"></i>delete
                                                </a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>