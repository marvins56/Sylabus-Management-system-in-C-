@model IEnumerable<SMIS.Models.MidtermMarksTable>

@{
    ViewBag.Title = "Index";

    Layout = "~/Views/Shared/_smisLayout.cshtml";
}


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4>STUDENT DETAILS</h4>
                <div class="card-header-action">
                    <form>
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search">
                            <div class="input-group-btn">
                                <button class="btn btn-primary"><i class="fas fa-search"></i></button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped" id="sortable-table">
                        <thead>

                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Marks)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Status)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ClassTable.Class_Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.StudentsTable.Student_Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SubjectTable.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Term.term1)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Year.year1)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="sort-handler">
                                            <i class="fas fa-th"></i>
                                        </div>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Marks)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ClassTable.Class_Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StudentsTable.Student_Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SubjectTable.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Term.term1)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Year.year1)
                                    </td>
                                    <td>
                                        <div class="dropdown">
                                            <a href="#" data-toggle="dropdown" class="btn btn-light   dropdown-toggle">
                                                <i class="fas fa-cog"></i>
                                            </a>

                                            <div class="dropdown-menu">


                                                <a href="@Url.Action("Details", "SubTopics", new { id = item.Marks_id })" class="dropdown-item has-icon"><i class="fas fa-eye"></i>View </a>
                                                <a href="@Url.Action("Edit", "SubTopics", new { id = item.Marks_id })" class="dropdown-item has-icon"><i class="far fa-edit"></i>Edit</a>
                                                <div class="dropdown-divider"></div>
                                                <a href="@Url.Action("Delete", "SubTopics", new { id = item.Marks_id})" class="dropdown-item has-icon text-danger">
                                                    <i class="far fa-trash-alt"></i>delete
                                                </a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>