@model IEnumerable<SMIS.Models.subject_class>

@{
    ViewBag.Title = "classSubjects";
    Layout = "~/Views/Shared/_smisLayout.cshtml";
}

<div class="alert alert-light alert-dismissible show fade alert-has-icon">
    <div class="alert-icon"><i class="far fa-lightbulb"></i></div>

    <div class="alert-body">
        <button class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        <ul>
            <h4> This section contains-</h4>
            <li>Statistics for the specific subject</li>

        </ul>

    </div>
</div>

<div class="row">
    <div class="col-md-6 col-lg-12 col-xl-12">

        <div class="card ">
            <div class="card-header">
                <h4>CLASS STATISTICS </h4>

            </div>

            <div class="card-body">
                <div class="row">
                    <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="card">
                            <div class="card-statistic-4">
                                <div class="align-items-center justify-content-between">
                                    <div class="row ">
                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 pr-0 pt-3">
                                            <div class="card-content">

                                                <h5 class="font-15"> No of subjects</h5>
                                                <h2 class="mb-3 font-18">@ViewBag.subjects</h2>
                                            </div>
                                        </div>
                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 pl-0">
                                            <div class="banner-img">
                                                <img src="~/Content/assets/img/banner/2.png" alt="">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="card">
                            <div class="card-statistic-4">
                                <div class="align-items-center justify-content-between">
                                    <div class="row ">
                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 pr-0 pt-3">
                                            <div class="card-content">

                                                <h5 class="font-15"> No of students</h5>
                                                <h2 class="mb-3 font-18">@ViewBag.students</h2>
                                            </div>
                                        </div>
                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 pl-0">
                                            <div class="banner-img">
                                                <img src="~/Content/assets/img/banner/2.png" alt="">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                   
                </div>
            </div>
        </div>
    </div>
</div>
<a href="@Url.Action("Create", "subject_class")" class="btn btn-icon btn-primary mb-2"><i class="fas fa-plus"></i> <span>Add subject to class</span></a>
<a href="@Url.Action("studentsPerclass", "Class", new { id = Convert.ToInt32(Session["classid"]) })" data-toggle="tooltip" data-placement="top"
   title="View students in class"  class="btn btn-icon btn-primary mb-2"><i class="fas fa-eye"></i> Students</a>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4>CLASS SUBJECT DETAILS</h4>
                <div class="card-header-action">
                    <form>
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search">
                            <div class="input-group-btn">
                                <button class="btn btn-primary"><i class="fas fa-search"></i></button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped" id="sortable-table">
                        <thead>

                            <tr>
                                <th>
                                    <div class="sort-handler">
                                        @*<i class="fas fa-th"></i>*@
                                    </div>
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ClassTable.Class_Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SubjectTable.Name)
                                </th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="sort-handler">
                                            <i class="fas fa-th"></i>
                                        </div>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ClassTable.Class_Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SubjectTable.Name)
                                    </td>
                                    <td>
                                      
                                            <a href="@Url.Action("Detail_Dashboard","Users", new { id = item.ID })" class="dropdown-item has-icon"><i class="fas fa-eye"></i>Manage </a>
                                            </td>
                                    <td>
                                            <a href="@Url.Action("Edit", "subject_class", new { id = item.ID })" class="dropdown-item has-icon"><i class="far fa-edit"></i>Edit</a>

                                                <a href="@Url.Action("Delete", "subject_class", new { id = item.ID})" class="dropdown-item has-icon text-danger">
                                                        <i class="far fa-trash-alt"></i>delete
                                                    </a>
                                          
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>