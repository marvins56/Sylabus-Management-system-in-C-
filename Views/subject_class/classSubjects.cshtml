@model IEnumerable<SMIS.Models.subject_class>

@{
    ViewBag.Title = "classSubjects";
    Layout = "~/Views/Shared/_smisLayout.cshtml";
}

<a href="@Url.Action("Create", "Topics")" class="btn btn-icon btn-primary mb-2"><i class="fas fa-plus"></i> <span>Add subject to class</span></a>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4>CLASS SUBJECT DETAILS</h4>
                <div class="card-header-action">
                    <form>
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search">
                            <div class="input-group-btn">
                                <button class="btn btn-primary"><i class="fas fa-search"></i></button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped" id="sortable-table">
                        <thead>

                            <tr>
                                <th>
                                    <div class="sort-handler">
                                        @*<i class="fas fa-th"></i>*@
                                    </div>
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ClassTable.Class_Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SubjectTable.Name)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="sort-handler">
                                            <i class="fas fa-th"></i>
                                        </div>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ClassTable.Class_Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SubjectTable.Name)
                                    </td>
                                    <td>
                                        <div class="dropdown">
                                            <a href="#" data-toggle="dropdown" class="btn btn-light   dropdown-toggle">
                                                <i class="fas fa-cog"></i>
                                            </a>

                                            <div class="dropdown-menu">
                                            

                                                <a href="@Url.Action("Detail_Dashboard","Users", new { id = item.ID })" class="dropdown-item has-icon"><i class="fas fa-eye"></i>Manage </a>
                                                <a href="@Url.Action("Edit", "subject_class", new { id = item.ID })" class="dropdown-item has-icon"><i class="far fa-edit"></i>Edit</a>
                                                <div class="dropdown-divider"></div>
                                                @*<a href="@Url.Action("Delete", "subject_class", new { id = item.ID})" class="dropdown-item has-icon text-danger">
            <i class="far fa-trash-alt"></i>delete
        </a>*@
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>